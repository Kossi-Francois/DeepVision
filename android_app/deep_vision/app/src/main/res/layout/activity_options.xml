<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:text="Deep Vision API URl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editText_endPoint"
        android:text="api endpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Glasses Camera Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginHorizontal="10dp"
        android:text="www.google.com"
        android:id="@+id/editText_streamUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Choose a Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:entries="@array/Language_arrays"
        android:layout_marginTop="5dp"
        android:id="@+id/switch_lang"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Voice Command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Switch
        android:layout_marginHorizontal="20dp"
        android:id="@+id/switch_voc_commznd"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="Voice Command Overlap Factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/overlapfactor"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:value="0.8"
        android:valueTo="1.0"/>




    <Button
        android:layout_margin="30dp"
        android:id="@+id/button_save_options"
        android:text="Save Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>